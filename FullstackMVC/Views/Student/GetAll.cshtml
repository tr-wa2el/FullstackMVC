@model IEnumerable<FullstackMVC.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Students List</h1>
        <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>SSN</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.SSN</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Gender</td>
                    <td>@(student.Department?.Name ?? "N/A")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.SSN" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@student.SSN" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@student.SSN" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="GetAllVM" class="btn btn-primary">
            <i class="bi bi-eye"></i> View with ViewModel
        </a>
    </div>
</div>
