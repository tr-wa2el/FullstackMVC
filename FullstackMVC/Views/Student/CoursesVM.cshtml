@model FullstackMVC.ViewModels.StudentCourseVM

@{
    ViewData["Title"] = "Student Courses";
}

<div class="container-fluid mt-4 fade-in">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-center shadow-sm">
                <i class="bi bi-info-circle-fill me-3" style="font-size: 2rem;"></i>
                <div>
                    <h5 class="mb-0">@Model.Message</h5>
                    <small class="text-muted">Detailed course enrollment and performance analysis</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-badge"></i> Student Information
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>SSN:</strong>
                            <span class="badge bg-primary ms-2">@Model.StudentSSN</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Name:</strong>
                            <span class="ms-2">@Model.StudentName</span>
                        </div>
                        <div class="col-md-2">
                            <strong>Age:</strong>
                            <span class="ms-2">@Model.StudentAge years</span>
                        </div>
                        <div class="col-md-2">
                            <strong>Gender:</strong>
                            @if (Model.StudentGender == "Male")
                            {
                                <span class="badge bg-primary ms-2">@Model.StudentGender</span>
                            }
                            else if (Model.StudentGender == "Female")
                            {
                                <span class="badge bg-danger ms-2">@Model.StudentGender</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary ms-2">@Model.StudentGender</span>
                            }
                        </div>
                        <div class="col-md-2">
                            <strong>Department:</strong>
                            <span class="badge bg-info ms-2">@Model.DepartmentName</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Performance Statistics -->
    <div class="row mb-4">
        <!-- Total Courses -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Total Courses</h6>
                            <h2 class="mb-0">@Model.TotalCoursesEnrolled</h2>
                        </div>
                        <i class="bi bi-book" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Passed Courses -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Passed</h6>
                            <h2 class="mb-0">@Model.PassedCoursesCount</h2>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Failed Courses -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white bg-danger shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Failed</h6>
                            <h2 class="mb-0">@Model.FailedCoursesCount</h2>
                        </div>
                        <i class="bi bi-x-circle" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Overall Average -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-white bg-@Model.PerformanceColor shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Average</h6>
                            <h2 class="mb-0">
                                @if (Model.OverallAverage.HasValue)
                                {
                                    @Model.OverallAverage.Value.ToString("F1")
                                    <small>%</small>
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </h2>
                            <small>@Model.PerformanceLevel</small>
                        </div>
                        <i class="bi bi-graph-up-arrow" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Details Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-journal-text"></i> Course Enrollment Details
                    </h4>
                </div>
                <div class="card-body p-0">
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Course #</th>
                                        <th>Course Name</th>
                                        <th>Topic</th>
                                        <th>Max Degree</th>
                                        <th>Min Degree</th>
                                        <th>Student Grade</th>
                                        <th>Percentage</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model.Courses)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">@course.CourseNum</span></td>
                                            <td><strong>@course.CourseName</strong></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(course.CourseTopic))
                                                {
                                                    <span class="badge bg-info">@course.CourseTopic</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@course.MaxDegree</td>
                                            <td class="text-warning"><strong>@course.MinDegree</strong></td>
                                            <td>
                                                @if (course.StudentGrade.HasValue)
                                                {
                                                    <strong class="text-@course.GradeColor">@course.StudentGrade.Value.ToString("F2")</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not Graded</span>
                                                }
                                            </td>
                                            <td>
                                                @if (course.PercentageScore.HasValue)
                                                {
                                                    <div class="progress" style="height: 25px;">
                                                        <div class="progress-bar bg-@course.GradeColor" role="progressbar"
                                                             style="width: @course.PercentageScore.Value%;"
                                                             aria-valuenow="@course.PercentageScore.Value"
                                                             aria-valuemin="0" aria-valuemax="100">
                                                            @course.PercentageScore.Value.ToString("F1")%
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@course.GradeColor">
                                                    @if (course.GradeStatus == "Pass")
                                                    {
                                                        <i class="bi bi-check-circle-fill"></i>
                                                    }
                                                    else if (course.GradeStatus == "Fail")
                                                    {
                                                        <i class="bi bi-x-circle-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-dash-circle-fill"></i>
                                                    }
                                                    @course.GradeStatus
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning m-3">
                            <i class="bi bi-exclamation-triangle"></i> No course enrollments found for this student.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="DetailsVM" asp-route-id="@Model.StudentSSN" class="btn btn-info">
                <i class="bi bi-person"></i> View Student Profile
            </a>
            <a asp-action="Edit" asp-route-id="@Model.StudentSSN" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Student
            </a>
            <a asp-action="GetAllVM" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Students List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
             // Add animation on page load
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
                 cards.forEach((card, index) => {
          setTimeout(() => {
         card.classList.add('fade-in');
           }, index * 100);
            });
        });
    </script>
}
