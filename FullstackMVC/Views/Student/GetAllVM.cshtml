@model IEnumerable<FullstackMVC.ViewModels.StudentVM>

@{
    ViewData["Title"] = "Students List (ViewModel)";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Students List <small class="text-muted">(Using ViewModel)</small></h1>
        <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>SSN</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.SSN</td>
                    <td>
                        @if (!string.IsNullOrEmpty(student.Image))
                        {
                            <img src="@student.Image" alt="@student.Name" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;" />
                        }
                        @student.Name
                    </td>
                    <td>@student.Age</td>
                    <td>
                        @if (student.Gender == "Male")
                        {
                            <span class="badge bg-primary">@student.Gender</span>
                        }
                        else if (student.Gender == "Female")
                        {
                            <span class="badge bg-danger">@student.Gender</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@student.Gender</span>
                        }
                    </td>
                    <td>@(student.Address ?? "N/A")</td>
                    <td>
                        <span class="badge bg-info">@student.DepartmentName</span>
                    </td>
                    <td>
                        <a asp-action="DetailsVM" asp-route-id="@student.SSN" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="CoursesVM" asp-route-id="@student.SSN" class="btn btn-primary btn-sm">
                            <i class="bi bi-journal-text"></i> Courses
                        </a>
                        <a asp-action="Edit" asp-route-id="@student.SSN" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@student.SSN" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="GetAll" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> View Regular List
        </a>
    </div>
</div>
