@model FullstackMVC.Models.Instructor

@{
  ViewData["Title"] = "Delete Instructor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
 <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Instructor</h3>
  </div>
    <div class="card-body">
  <div class="alert alert-warning" role="alert">
     <strong><i class="bi bi-exclamation-triangle-fill"></i> Warning!</strong>
      Are you sure you want to delete this instructor? This action cannot be undone.
 </div>

  <h4 class="mb-3">Instructor Information:</h4>
        
      <div class="row mb-3">
   <div class="col-md-6">
     <div class="card bg-light">
      <div class="card-body">
<h6 class="text-muted">Personal Details</h6>
      <p><strong>ID:</strong> @Model.Id</p>
 <p><strong>Name:</strong> @Model.Name</p>
     <p><strong>Email:</strong> @Model.Email</p>
  <p><strong>Age:</strong> @Model.Age years</p>
   <p><strong>Address:</strong> @(Model.Address ?? "Not specified")</p>
      </div>
     </div>
      </div>
   
       <div class="col-md-6">
    <div class="card bg-light">
          <div class="card-body">
   <h6 class="text-muted">Professional Details</h6>
      <p><strong>Degree:</strong> @(Model.Degree ?? "Not specified")</p>
  <p><strong>Salary:</strong> <span class="text-success">@Model.Salary.ToString("C")</span></p>
      <p>
       <strong>Department:</strong>
   @if (Model.Department != null)
  {
   <span class="badge bg-info">@Model.Department.Name</span>
      }
 else
        {
  <span class="text-muted">None</span>
    }
      </p>
       <p>
    <strong>Courses:</strong>
   @if (Model.Courses != null && Model.Courses.Any())
   {
    <span class="badge bg-primary">@Model.Courses.Count()</span>
  }
    else
        {
      <span class="badge bg-secondary">0</span>
   }
       </p>
      </div>
       </div>
   </div>
     </div>

        @if (Model.Courses != null && Model.Courses.Any())
 {
     <div class="alert alert-info mt-3">
      <strong>Note:</strong> This instructor is currently teaching @Model.Courses.Count() course(s). 
   Deleting will remove the instructor from these courses.
      </div>
        }

       <form asp-action="Delete" method="post" class="mt-4">
  <input type="hidden" asp-for="Id" />
 <div class="d-flex justify-content-between">
  <a asp-action="GetAll" class="btn btn-secondary btn-lg">
    <i class="bi bi-arrow-left"></i> Cancel
    </a>
      <button type="submit" class="btn btn-danger btn-lg">
        <i class="bi bi-trash"></i> Yes, Delete Instructor
     </button>
      </div>
       </form>
     </div>
      </div>
 </div>
    </div>
</div>
