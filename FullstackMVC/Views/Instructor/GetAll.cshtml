@model IEnumerable<FullstackMVC.Models.Instructor>

@{
    ViewData["Title"] = "All Instructors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge"></i> All Instructors</h2>
    <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Instructor
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
 <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    }

  @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-body">
          <div class="table-responsive">
    <table class="table table-hover table-striped">
    <thead class="table-dark">
     <tr>
      <th>ID</th>
       <th>Name</th>
      <th>Email</th>
     <th>Age</th>
    <th>Salary</th>
             <th>Degree</th>
<th>Department</th>
        <th>Courses</th>
              <th>Actions</th>
      </tr>
   </thead>
        <tbody>
            @foreach (var instructor in Model)
      {
    <tr>
      <td>@instructor.Id</td>
         <td>@instructor.Name</td>
  <td>@instructor.Email</td>
            <td>@instructor.Age</td>
          <td>@instructor.Salary.ToString("C")</td>
   <td>@instructor.Degree</td>
        <td>
       @if (instructor.Department != null)
  {
        <span class="badge bg-info">@instructor.Department.Name</span>
   }
  else
           {
   <span class="badge bg-secondary">No Department</span>
       }
    </td>
    <td>
  @if (instructor.Courses != null && instructor.Courses.Any())
        {
      <span class="badge bg-primary">@instructor.Courses.Count()</span>
   }
           else
              {
         <span class="badge bg-secondary">0</span>
         }
  </td>
      <td>
        <div class="btn-group" role="group">
         <a asp-action="Details" asp-route-id="@instructor.Id" class="btn btn-sm btn-info" title="Details">
               <i class="bi bi-eye"></i>
  </a>
 <a asp-action="Edit" asp-route-id="@instructor.Id" class="btn btn-sm btn-warning" title="Edit">
           <i class="bi bi-pencil"></i>
  </a>
      <a asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-sm btn-danger" title="Delete">
         <i class="bi bi-trash"></i>
        </a>
          </div>
 </td>
 </tr>
     }
         </tbody>
       </table>
         </div>
  </div>
        </div>
    }
    else
    {
<div class="alert alert-info text-center" role="alert">
       <i class="bi bi-info-circle"></i> No instructors found. <a asp-action="Add" class="alert-link">Add the first instructor</a>
        </div>
    }
</div>
