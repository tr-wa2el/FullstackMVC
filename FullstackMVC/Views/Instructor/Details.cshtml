@model FullstackMVC.Models.Instructor

@{
  ViewData["Title"] = "Instructor Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
  <div class="col-md-10">
 <div class="card shadow">
  <div class="card-header bg-info text-white">
    <h3 class="mb-0"><i class="bi bi-person-badge"></i> Instructor Details</h3>
    </div>
 <div class="card-body">
    <div class="row">
       <div class="col-md-6">
    <h5 class="text-muted">Personal Information</h5>
        <table class="table table-borderless">
  <tr>
 <th width="40%">ID:</th>
   <td><strong>@Model.Id</strong></td>
   </tr>
      <tr>
      <th>Name:</th>
     <td>@Model.Name</td>
       </tr>
     <tr>
   <th>Email:</th>
  <td>
    <a href="mailto:@Model.Email">@Model.Email</a>
  </td>
   </tr>
     <tr>
     <th>Age:</th>
   <td>@Model.Age years</td>
         </tr>
   <tr>
        <th>Address:</th>
         <td>@(Model.Address ?? "Not specified")</td>
        </tr>
     </table>
</div>

<div class="col-md-6">
      <h5 class="text-muted">Professional Information</h5>
        <table class="table table-borderless">
        <tr>
  <th width="40%">Degree:</th>
  <td>@(Model.Degree ?? "Not specified")</td>
     </tr>
     <tr>
   <th>Salary:</th>
        <td><strong class="text-success">@Model.Salary.ToString("C")</strong></td>
 </tr>
 <tr>
    <th>Department:</th>
      <td>
  @if (Model.Department != null)
   {
    <span class="badge bg-info text-dark fs-6">@Model.Department.Name</span>
   }
          else
        {
     <span class="text-muted">No Department Assigned</span>
    }
   </td>
       </tr>
           </table>
           </div>
    </div>

    <hr class="my-4" />

     <div class="row">
       <div class="col-12">
    <h5 class="text-muted mb-3">Courses Taught</h5>
    @if (Model.Courses != null && Model.Courses.Any())
       {
     <div class="row">
            @foreach (var course in Model.Courses)
{
  <div class="col-md-6 mb-3">
   <div class="card border-primary">
         <div class="card-body">
        <h6 class="card-title text-primary">@course.Name</h6>
       <p class="card-text mb-1"><strong>Topic:</strong> @course.Topic</p>
    <p class="card-text mb-1"><strong>Description:</strong> @course.Description</p>
   <p class="card-text mb-0">
        <strong>Degree Range:</strong> 
  <span class="badge bg-secondary">@course.MinDegree</span> - 
   <span class="badge bg-success">@course.Degree</span>
      </p>
           </div>
       </div>
 </div>
         }
   </div>
     }
           else
        {
      <div class="alert alert-info">
   <i class="bi bi-info-circle"></i> This instructor is not teaching any courses yet.
       </div>
   }
          </div>
   </div>

     <!-- Department Details -->
     @if (Model.Department != null)
        {
       <hr class="my-4" />
    <div class="row">
           <div class="col-12">
    <h5 class="text-muted mb-3">Department Information</h5>
       <div class="card bg-light">
        <div class="card-body">
       <div class="row">
       <div class="col-md-4">
    <strong>Department:</strong> @Model.Department.Name
      </div>
      <div class="col-md-4">
 <strong>Manager:</strong> @Model.Department.ManagerName
          </div>
      <div class="col-md-4">
  <strong>Location:</strong> @Model.Department.Location
   </div>
       </div>
    </div>
     </div>
     </div>
     </div>
        }

<!-- Action Buttons -->
   <div class="d-flex justify-content-between mt-4">
      <a asp-action="GetAll" class="btn btn-secondary">
     <i class="bi bi-arrow-left"></i> Back to List
      </a>
    <div>
 <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
     <i class="bi bi-pencil"></i> Edit
     </a>
  <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
    <i class="bi bi-trash"></i> Delete
   </a>
    </div>
      </div>
       </div>
     </div>
      </div>
    </div>
</div>
