@model FullstackMVC.Models.Instructor

@{
    ViewData["Title"] = "Add Instructor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
 <div class="card shadow">
                <div class="card-header bg-success text-white">
   <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Instructor</h3>
           </div>
   <div class="card-body">
           <form asp-action="Add" method="post">
     <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <!-- Name -->
           <div class="mb-3">
           <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control" placeholder="Enter instructor name" required />
       <span asp-validation-for="Name" class="text-danger"></span>
             </div>

     <!-- Email -->
  <div class="mb-3">
<label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" type="email" class="form-control" placeholder="instructor@university.edu" required />
        <span asp-validation-for="Email" class="text-danger"></span>
         <small class="form-text text-muted">Email must be unique</small>
         </div>

                <!-- Department -->
            <div class="mb-3">
             <label asp-for="DeptId" class="form-label">Department</label>
    <select asp-for="DeptId" class="form-control" asp-items="ViewBag.Departments">
     <option value="">-- Select Department --</option>
           </select>
      <span asp-validation-for="DeptId" class="text-danger"></span>
               <small class="form-text text-muted">Salary rules apply based on department</small>
              </div>

              <div class="row">
           <!-- Age -->
         <div class="col-md-4 mb-3">
  <label asp-for="Age" class="form-label"></label>
  <input asp-for="Age" type="number" class="form-control" placeholder="25" required />
    <span asp-validation-for="Age" class="text-danger"></span>
   </div>

   <!-- Salary -->
        <div class="col-md-4 mb-3">
         <label asp-for="Salary" class="form-label"></label>
    <input asp-for="Salary" type="number" step="0.01" class="form-control" placeholder="10000" required />
  <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

        <!-- Degree -->
          <div class="col-md-4 mb-3">
       <label asp-for="Degree" class="form-label"></label>
           <input asp-for="Degree" class="form-control" placeholder="PhD, Master, etc." />
    <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
     </div>

           <!-- Address -->
           <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
             <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter address"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
            </div>

 <div class="alert alert-info">
              <strong>Salary Rules:</strong>
       <ul class="mb-0">
        <li>SD Department: Salary must be > 10,000</li>
       <li>HR Department: Salary must be > 15,000 and < 50,000</li>
      </ul>
    </div>

    <!-- Buttons -->
      <div class="d-flex justify-content-between mt-4">
        <a asp-action="GetAll" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
 <button type="submit" class="btn btn-success btn-lg">
      <i class="bi bi-plus-circle"></i> Add Instructor
     </button>
      </div>
         </form>
       </div>
</div>
        </div>
  </div>
</div>

@section Scripts {
  @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
