@model FullstackMVC.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container-fluid mt-4">
    <!-- Course Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-journal-bookmark"></i> Course Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Course Number</dt>
                                <dd class="col-sm-8"><span class="badge bg-secondary fs-5">@Model.Num</span></dd>

                                <dt class="col-sm-4">Course Name</dt>
                                <dd class="col-sm-8"><h4>@Model.Name</h4></dd>

                                <dt class="col-sm-4">Topic</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Topic))
                                    {
                                        <span class="badge bg-info fs-6">@Model.Topic</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No topic specified</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Model.Description
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description available</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-uppercase text-muted">Grade Information</h6>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span>Maximum Degree:</span>
                                            <span class="badge bg-success fs-5">@Model.Degree</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>Minimum Degree:</span>
                                            <span class="badge bg-warning fs-5">@Model.MinDegree</span>
                                        </div>
                                    </div>
                                    <div class="progress" style="height: 30px;">
                                        <div class="progress-bar bg-warning" role="progressbar"
                                             style="width: @((Model.MinDegree / Model.Degree * 100))%;"
                                             aria-valuenow="@Model.MinDegree" aria-valuemin="0" aria-valuemax="@Model.Degree">
                                            Min: @Model.MinDegree
                                        </div>
                                        <div class="progress-bar bg-success" role="progressbar"
                                             style="width: @((Model.Degree - Model.MinDegree) / Model.Degree * 100)%;"
                                             aria-valuenow="@(Model.Degree - Model.MinDegree)" aria-valuemin="0" aria-valuemax="@Model.Degree">
                                            Max: @Model.Degree
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Enrolled Students</h6>
                            <h2 class="mb-0">@(Model.Grades?.Count ?? 0)</h2>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                    <a asp-action="Students" asp-route-id="@Model.Num" class="btn btn-light btn-sm mt-3">
                        <i class="bi bi-eye"></i> View Students
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Instructors</h6>
                            <h2 class="mb-0">@(Model.Instructors?.Count ?? 0)</h2>
                        </div>
                        <i class="bi bi-person-badge" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                    <a asp-action="Instructors" asp-route-id="@Model.Num" class="btn btn-light btn-sm mt-3">
                        <i class="bi bi-eye"></i> View Instructors
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Enrolled Students List -->
    @if (Model.Grades != null && Model.Grades.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="bi bi-people"></i> Enrolled Students</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-success">
                                    <tr>
                                        <th>SSN</th>
                                        <th>Student Name</th>
                                        <th>Department</th>
                                        <th>Grade</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var grade in Model.Grades)
                                    {
                                        var status = grade.GradeValue.HasValue && grade.GradeValue >= Model.MinDegree ? "Pass" : "Fail";
                                        var statusColor = status == "Pass" ? "success" : "danger";
                                        <tr>
                                            <td><span class="badge bg-secondary">@grade.Student?.SSN</span></td>
                                            <td>@(grade.Student?.Name ?? "N/A")</td>
                                            <td>@(grade.Student?.Department?.Name ?? "N/A")</td>
                                            <td>
                                                @if (grade.GradeValue.HasValue)
                                                {
                                                    <strong class="text-@statusColor">@grade.GradeValue.Value.ToString("F2")</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not Graded</span>
                                                }
                                            </td>
                                            <td>
                                                @if (grade.GradeValue.HasValue)
                                                {
                                                    <span class="badge bg-@statusColor">@status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <a asp-action="Edit" asp-route-id="@Model.Num" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Course
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Num" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete Course
            </a>
            <a asp-action="GetAll" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
