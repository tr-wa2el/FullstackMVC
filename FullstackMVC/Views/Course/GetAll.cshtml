@model IEnumerable<FullstackMVC.Models.Course>

@{
    ViewData["Title"] = "Courses List";
}

<div class="container-fluid mt-4">
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-journal-text"></i> Courses Management</h1>
        <a asp-action="Add" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Course
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Total Courses</h6>
                            <h2 class="mb-0">@Model.Count()</h2>
                        </div>
                        <i class="bi bi-book" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0"><i class="bi bi-table"></i> All Courses</h4>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Course #</th>
                                <th>Name</th>
                                <th>Topic</th>
                                <th>Max Degree</th>
                                <th>Min Degree</th>
                                <th>Enrolled Students</th>
                                <th>Instructors</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@course.Num</span></td>
                                    <td><strong>@course.Name</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(course.Topic))
                                        {
                                            <span class="badge bg-info">@course.Topic</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td><span class="badge bg-success">@course.Degree</span></td>
                                    <td><span class="badge bg-warning text-dark">@course.MinDegree</span></td>
                                    <td>
                                        <span class="badge bg-primary">@(course.Grades?.Count ?? 0) Students</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@(course.Instructors?.Count ?? 0) Instructors</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@course.Num" class="btn btn-info btn-sm" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Students" asp-route-id="@course.Num" class="btn btn-primary btn-sm" title="View Students">
                                                <i class="bi bi-people"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@course.Num" class="btn btn-warning btn-sm" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@course.Num" class="btn btn-danger btn-sm" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle"></i> No courses found. Click "Add New Course" to create one.
                </div>
            }
        </div>
    </div>
</div>
