@model FullstackMVC.Models.Course

@{
    ViewData["Title"] = $"Students in {Model.Name}";
}

<div class="container-fluid mt-4">
    <!-- Course Header -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-people-fill"></i>
                Students Enrolled in: <strong>@Model.Name</strong>
            </h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Course Number:</strong> <span class="badge bg-secondary">@Model.Num</span>
                </div>
                <div class="col-md-3">
                    <strong>Topic:</strong> <span class="badge bg-info">@(Model.Topic ?? "N/A")</span>
                </div>
                <div class="col-md-3">
                    <strong>Max Degree:</strong> <span class="badge bg-success">@Model.Degree</span>
                </div>
                <div class="col-md-3">
                    <strong>Min Degree:</strong> <span class="badge bg-warning text-dark">@Model.MinDegree</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table -->
    @if (Model.Grades != null && Model.Grades.Any())
    {
        var passedCount = Model.Grades.Count(g => g.GradeValue.HasValue && g.GradeValue >= Model.MinDegree);
        var failedCount = Model.Grades.Count(g => g.GradeValue.HasValue && g.GradeValue < Model.MinDegree);
        var pendingCount = Model.Grades.Count(g => !g.GradeValue.HasValue);
        var averageGrade = Model.Grades.Where(g => g.GradeValue.HasValue).Any()
        ? Model.Grades.Where(g => g.GradeValue.HasValue).Average(g => g.GradeValue!.Value)
        : (decimal?)null;

        <!-- Statistics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white shadow">
                    <div class="card-body text-center">
                        <h6 class="text-uppercase">Total Students</h6>
                        <h2>@Model.Grades.Count</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white shadow">
                    <div class="card-body text-center">
                        <h6 class="text-uppercase">Passed</h6>
                        <h2>@passedCount</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white shadow">
                    <div class="card-body text-center">
                        <h6 class="text-uppercase">Failed</h6>
                        <h2>@failedCount</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white shadow">
                    <div class="card-body text-center">
                        <h6 class="text-uppercase">Average Grade</h6>
                        <h2>@(averageGrade?.ToString("F1") ?? "N/A")</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="bi bi-table"></i> Student Details</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>SSN</th>
                                <th>Student Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Department</th>
                                <th>Grade</th>
                                <th>Percentage</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var grade in Model.Grades.OrderByDescending(g => g.GradeValue))
                            {
                                var status = grade.GradeValue.HasValue && grade.GradeValue >= Model.MinDegree ? "Pass" : "Fail";
                                var statusColor = status == "Pass" ? "success" : "danger";
                                var percentage = grade.GradeValue.HasValue ? (grade.GradeValue.Value / Model.Degree * 100) : 0;

                                <tr>
                                    <td><span class="badge bg-secondary">@grade.Student?.SSN</span></td>
                                    <td>
                                        <a asp-controller="Student" asp-action="Details" asp-route-id="@grade.Student?.SSN" class="text-decoration-none">
                                            <strong>@(grade.Student?.Name ?? "N/A")</strong>
                                        </a>
                                    </td>
                                    <td>@(grade.Student?.Age ?? 0)</td>
                                    <td>
                                        @if (grade.Student?.Gender == "Male")
                                        {
                                            <span class="badge bg-primary">@grade.Student.Gender</span>
                                        }
                                        else if (grade.Student?.Gender == "Female")
                                        {
                                            <span class="badge bg-danger">@grade.Student.Gender</span>
                                        }
                                    </td>
                                    <td>@(grade.Student?.Department?.Name ?? "N/A")</td>
                                    <td>
                                        @if (grade.GradeValue.HasValue)
                                        {
                                            <strong class="text-@statusColor fs-5">@grade.GradeValue.Value.ToString("F2")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Graded</span>
                                        }
                                    </td>
                                    <td>
                                        @if (grade.GradeValue.HasValue)
                                        {
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar bg-@statusColor" role="progressbar"
                                                     style="width: @percentage%;"
                                                     aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                                    @percentage.ToString("F1")%
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (grade.GradeValue.HasValue)
                                        {
                                            <span class="badge bg-@statusColor">
                                                @if (status == "Pass")
                                                {
                                                    <i class="bi bi-check-circle-fill"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle-fill"></i>
                                                }
                                                @status
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No students are currently enrolled in this course.
        </div>
    }

    <!-- Back Button -->
    <div class="mt-4">
        <a asp-action="Details" asp-route-id="@Model.Num" class="btn btn-primary">
            <i class="bi bi-eye"></i> View Course Details
        </a>
        <a asp-action="GetAll" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Courses
        </a>
    </div>
</div>
