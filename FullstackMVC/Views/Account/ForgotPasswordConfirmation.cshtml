@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
<div class="col-md-6">
       <div class="card shadow">
      <div class="card-header bg-success text-white">
          <h2 class="mb-0">Check Your Email</h2>
  </div>
<div class="card-body text-center">
          <div class="mb-4">
        <i class="bi bi-envelope-check" style="font-size: 4rem; color: #28a745;"></i>
</div>
 <h4>Password Reset Link Sent!</h4>
         <p class="text-muted mt-3">
        If an account exists with the email you provided, you will receive a password reset link shortly.
    </p>
   <p class="text-muted">
     Please check your email inbox and follow the instructions to reset your password.
      </p>
      <div class="mt-4">
     <a asp-action="Login" class="btn btn-primary">Back to Login</a>
     </div>
        </div>
  </div>
     </div>
    </div>
</div>
