@model FullstackMVC.ViewModels.LoginViewModel

@{
  ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
  <div class="card shadow">
          <div class="card-header bg-success text-white">
          <h2 class="mb-0">Login</h2>
                </div>
      <div class="card-body">
       <form asp-action="Login" method="post">
   <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
       
      <div class="mb-3">
    <label asp-for="Email" class="form-label"></label>
       <input asp-for="Email" class="form-control" autofocus type="email" />
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>

             <div class="mb-3">
      <label asp-for="Password" class="form-label"></label>
    <input asp-for="Password" class="form-control" type="password" />
   <span asp-validation-for="Password" class="text-danger"></span>
     </div>

         <div class="mb-3 form-check">
               <input asp-for="RememberMe" class="form-check-input" />
    <label asp-for="RememberMe" class="form-check-label"></label>
           </div>

             <div class="d-grid gap-2">
     <button type="submit" class="btn btn-success btn-lg">Login</button>
          </div>

          <div class="mt-3 text-center">
    <a asp-action="ForgotPassword" class="text-decoration-none">Forgot your password?</a>
            </div>

     <div class="mt-3 text-center">
    <p>Don't have an account? <a asp-action="Register">Register here</a></p>
    </div>
          </form>

          <hr class="my-4" />

    <div class="text-center">
<h5 class="mb-3">Or login with</h5>
          <form asp-action="ExternalLogin" asp-route-provider="Facebook" method="post">
          <button type="submit" class="btn btn-primary btn-lg w-100">
           <i class="bi bi-facebook me-2"></i> Login with Facebook
   </button>
  </form>
   </div>
        </div>
       </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
