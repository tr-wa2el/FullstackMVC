@model FullstackMVC.ViewModels.VerifyOtpViewModel

@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
<div class="card shadow">
   <div class="card-header bg-success text-white">
         <h2 class="mb-0">Verify Your Phone Number</h2>
      </div>
 <div class="card-body">
      <div class="alert alert-info">
       <i class="bi bi-info-circle"></i> We've sent a 6-digit verification code to your WhatsApp: <strong>@Model.PhoneNumber</strong>
         </div>

     <form asp-action="VerifyOtp" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="PhoneNumber" />
         
          <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

      <div class="mb-3">
          <label asp-for="OtpCode" class="form-label">Enter 6-Digit Code</label>
            <input asp-for="OtpCode" class="form-control form-control-lg text-center" 
  maxlength="6" placeholder="000000" style="letter-spacing: 0.5em;" />
  <span asp-validation-for="OtpCode" class="text-danger"></span>
     </div>

    <div class="d-grid gap-2">
         <button type="submit" class="btn btn-success btn-lg">Verify</button>
   </div>

     <div class="mt-3 text-center">
      <p class="text-muted">Code expires in 10 minutes</p>
    <small>Didn't receive the code? <a href="#">Resend</a></small>
   </div>
         </form>
     </div>
    </div>
      </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
