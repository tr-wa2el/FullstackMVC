@model FullstackMVC.Models.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
     <div class="card shadow-lg border-danger">
      <div class="card-header bg-danger text-white">
     <h3 class="mb-0">
       <i class="bi bi-exclamation-triangle"></i> Delete Student Confirmation
    </h3>
      </div>
    <div class="card-body p-4">
       <div class="alert alert-warning" role="alert">
   <h5><i class="bi bi-warning"></i> Warning!</h5>
   Are you sure you want to delete this student? This action cannot be undone and will permanently remove:
           <ul class="mt-2 mb-0">
      <li>Student record and personal information</li>
       <li>All associated grades and course enrollments</li>
     <li>Any linked account data</li>
       </ul>
     </div>

     <!-- Student Information Display -->
    <div class="row g-3 mb-4">
      <div class="col-12">
<div class="card bg-light">
     <div class="card-body">
    <div class="row align-items-center">
        <!-- Student Photo -->
   <div class="col-md-3 text-center">
        @if (!string.IsNullOrEmpty(Model.Image))
       {
           <img src="@Model.Image" class="img-fluid rounded-circle border" 
      style="width: 120px; height: 120px; object-fit: cover;" 
          alt="@Model.Name" onerror="this.src='https://via.placeholder.com/120x120?text=👤';" />
   }
      else
        {
        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto" 
     style="width: 120px; height: 120px; font-size: 3rem; color: white;">
            <i class="bi bi-person-fill"></i>
      </div>
       }
        </div>

        <!-- Student Details -->
  <div class="col-md-9">
       <table class="table table-borderless mb-0">
    <tbody>
<tr>
      <td class="fw-bold"><i class="bi bi-person-badge"></i> SSN:</td>
    <td><span class="badge bg-primary fs-6">@Model.SSN</span></td>
    </tr>
       <tr>
  <td class="fw-bold"><i class="bi bi-person"></i> Name:</td>
   <td><strong class="text-primary">@Model.Name</strong></td>
       </tr>
   <tr>
  <td class="fw-bold"><i class="bi bi-calendar3"></i> Age:</td>
   <td>@Model.Age years old</td>
      </tr>
          <tr>
    <td class="fw-bold"><i class="bi bi-gender-ambiguous"></i> Gender:</td>
       <td>
    @if (Model.Gender == "Male")
     {
      <span class="badge bg-primary">Male</span>
       }
    else if (Model.Gender == "Female")
          {
       <span class="badge bg-pink">Female</span>
        }
       else
   {
         <span class="text-muted">Not specified</span>
        }
     </td>
      </tr>
    @if (Model.Department != null)
     {
    <tr>
   <td class="fw-bold"><i class="bi bi-building"></i> Department:</td>
     <td><span class="badge bg-success">@Model.Department.Name</span></td>
   </tr>
 }
       @if (!string.IsNullOrEmpty(Model.Address))
     {
       <tr>
 <td class="fw-bold"><i class="bi bi-geo-alt"></i> Address:</td>
      <td>@Model.Address</td>
      </tr>
      }
       @if (Model.Grades != null && Model.Grades.Any())
 {
       <tr>
       <td class="fw-bold"><i class="bi bi-book"></i> Enrolled Courses:</td>
       <td><span class="badge bg-info">@Model.Grades.Count() course(s)</span></td>
        </tr>
         }
        </tbody>
  </table>
       </div>
        </div>
     </div>
        </div>
       </div>
    </div>

             @if (Model.Grades != null && Model.Grades.Any())
             {
          <div class="alert alert-info">
   <h6><i class="bi bi-info-circle"></i> Academic Records</h6>
      <p class="mb-2">This student is currently enrolled in <strong>@Model.Grades.Count()</strong> course(s):</p>
      <ul class="mb-0">
        @foreach (var grade in Model.Grades.Take(5))
     {
        <li>@(grade.Course?.Name ?? "Unknown Course")</li>
       }
       @if (Model.Grades.Count() > 5)
        {
  <li><em>... and @(Model.Grades.Count() - 5) more course(s)</em></li>
        }
      </ul>
        </div>
    }

  <!-- Deletion Form -->
     <form asp-action="DeleteStudent" method="post">
 <input type="hidden" asp-for="SSN" />
      
             <!-- Confirmation Checkbox -->
      <div class="form-check mb-4">
       <input class="form-check-input" type="checkbox" id="confirmDelete" required>
      <label class="form-check-label fw-bold text-danger" for="confirmDelete">
    I understand that this action is permanent and cannot be undone.
        </label>
    </div>

      <!-- Action Buttons -->
     <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
      <a asp-action="Students" class="btn btn-outline-secondary btn-lg">
        <i class="bi bi-arrow-left"></i> Cancel & Go Back
      </a>
       <button type="submit" class="btn btn-danger btn-lg" id="deleteButton" disabled>
           <i class="bi bi-trash3"></i> Permanently Delete Student
  </button>
  </div>
  </form>
      </div>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
     // Enable delete button only when checkbox is checked
        document.getElementById('confirmDelete').addEventListener('change', function() {
    document.getElementById('deleteButton').disabled = !this.checked;
        });

      // Additional confirmation on form submit
        document.querySelector('form').addEventListener('submit', function(e) {
       if (!confirm('Are you ABSOLUTELY sure you want to delete this student? This action cannot be undone!')) {
        e.preventDefault();
         return false;
      }
        });
    </script>

    <style>
        .bg-pink {
      background-color: #e83e8c !important;
      }

        .card {
     border: none;
       border-radius: 15px;
}
    
        .card-header {
        border-radius: 15px 15px 0 0 !important;
     padding: 1.5rem;
        }

   .card.border-danger {
            border: 2px solid #dc3545 !important;
        }

        .btn {
    border-radius: 10px;
            padding: 0.75rem 1.5rem;
   font-weight: 500;
          transition: all 0.3s ease;
    }
        
      .btn:hover:not(:disabled) {
  transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}

  .btn:disabled {
     opacity: 0.5;
     cursor: not-allowed;
        }

   .border-top {
 border-color: #e9ecef !important;
      }

    .table td {
      padding: 0.5rem;
            vertical-align: middle;
        }

    .alert {
border-radius: 10px;
     }

   .form-check-input:checked {
  background-color: #dc3545;
        border-color: #dc3545;
        }

     .badge {
     font-size: 0.9em;
        }

        .bg-light .card-body {
            padding: 1.5rem;
 }

        img.rounded-circle {
    border: 3px solid #dee2e6;
        }

        .text-primary {
      color: #667eea !important;
 }
 </style>
}